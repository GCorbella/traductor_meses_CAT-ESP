<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonTraducir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:text="Traductor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewMes"
        android:layout_width="291dp"
        android:layout_height="215dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="120dp"
        android:text="Traductor de meses catalÃ -castellano"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextMes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextMes"
        android:layout_width="259dp"
        android:layout_height="86dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="100dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Introduce el mes/Introdueix el mes"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonTraducir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMes" />

</androidx.constraintlayout.widget.ConstraintLayout>